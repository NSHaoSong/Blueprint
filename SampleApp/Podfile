platform :ios, '10.0'

project 'SampleApp.xcodeproj'

use_frameworks!(:linkage => :static)

def blueprint_pods
  pod 'BlueprintUI', :path => '../BlueprintUI.podspec', :testspecs => ['Tests'] 
  pod 'BlueprintUICommonControls', :path => '../BlueprintUICommonControls.podspec'
  
  pod 'BlueprintUIDebugging', :path => '../BlueprintUIDebugging.podspec' #, :testspecs => ['Tests'] # once there's tests
end

target 'SampleApp' do
  blueprint_pods
end

target 'Tutorial 1' do
  blueprint_pods
end

target 'Tutorial 1 (Completed)' do
  blueprint_pods
end

target 'Tutorial 2' do
  blueprint_pods
end

target 'Tutorial 2 (Completed)' do
  blueprint_pods
end
